Root:

<Root>:
    LoginScreen:
        orientation: 'vertical'
        id: loginscreen
        
        BoxLayout:
            id: bottombox
            size_hint_y: 0.40
        
        BoxLayout:
            id: focus
            size_hint_y: 0.15
            
            BoxLayout:
                id: sidebox1
                size_hint_x: 0.15
            
            BoxLayout:
                id:middlebox
                orientation: 'vertical'
                size_hint_x:0.70
                canvas.before: 
                    Color: 
                        rgb: 0.6, 0.6, 0.6
                    Rectangle:
                        size: self.size
                        pos: self.pos
                            
                BoxLayout:
                    id: unamebox
                    Label:
                        id:unamelabel
                        text: 'Username : '
                    TextInput:
                        id:unameinput
                        
                BoxLayout:
                    id: passbox
                    
                    Label:
                        id:passlabel
                        text: 'Password : '
                    TextInput:
                        id:passinput
                    
                       
                        
            BoxLayout:
                id:sidebox2
                size_hint_x:0.15
                
        BoxLayout:
            id: bottombox
            size_hint_y: 0.45